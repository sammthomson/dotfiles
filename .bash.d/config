export EDITOR='emacs'

# show the current git branch
export PS1='[\u@\h \W$(__git_ps1 " (%s)")]\$ '

# from http://www.ukuug.org/events/linux2003/papers/bash_tips/
# shared history
shopt -s histappend
export PROMPT_COMMAND='history -a'

shopt -s cdspell

export CDPATH='.:..:../..:~/links'

export IGNOREEOF=1
